<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <title>{{subject}}</title>
</head>

<body style="background:#f5f5f5;font-family:Roboto,sans-serif;padding:1.5rem;margin:0;">

  <p style="font-size: 14pt;">
    <i>
      {{warning}}
    </i>
  </p>

  <!-- TABLE CHÍNH -->
  <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center" style="max-width:500px;margin:auto">

    <!-- HEADER -->
    <tr>
      <td style="background:#fcd00b;padding:20px 0;text-align:center;"></td>
    </tr>

    <!-- DẢI SỌC -->
    <tr>
      <td style="height:6px;background:repeating-linear-gradient(-45deg,#262629 0 10px,#fcd00b 10px 20px);"></td>
    </tr>
  </table>



  <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center"
    style="background: white;max-width:500px;margin-bottom:15px;border-radius:0 0 10px 10px;box-shadow:0 1px 4px rgba(0,0,0,0.08);">
    <tr>
      <td style="padding:24px;">

        <!-- Tiêu đề -->
        <div style="text-align:center;margin-bottom:16px;">
          <img src="https://drive.google.com/thumbnail?sz=h150&id=1FUg4jZeFy0PBHf9XvY1Q4QZrtQGrj6NJ" alt="Logo Lug24"
            style="max-width:150px;">
          <h1 style="font-weight:normal;color:#434343;margin:15px 0 0;line-height:1.4;text-align:center;">
            {{title}}
          </h1>
        </div>

        <div style="color:#434343;">
          <p><strong style="font-size:18px;">{{greeting_0}} {{customer.fullname}},</strong></p>
          <p style="font-size:15px;margin:0">{{greeting_1}}</p>
          <p style="font-size:15px;margin:0">{{greeting_2}}</p>
        </div>

        <!-- QR -->
        <div style="text-align:center;margin:20px;">
          <img src="cid:{{qrCodeLink}}" width="50%">
        </div>

        <div style="margin:20px 0;">
          <h2 style="margin:0;text-transform:uppercase;"><strong>{{parcelInfo}}</strong></h2>
          <p style="font-size: 12pt; margin:4px 0;">{{orderID}}: <strong>{{order.orderID}}</strong></p>
          <p style="margin: auto;">{{paymentByLug}}</p>
        </div>



        <hr style="border:none;border-top:1px solid #eee;margin:20px 0;">

        <div style="margin:20px 0;">
          <!-- Thông tin khách -->
          <p style="font-size: 12pt;margin: auto;">{{customerName}}:<br>
          <h2 style="margin: 0px;font-weight:bold;color:#f1c232;text-transform:uppercase;">{{customer.fullname}}</h2>
          </p>


          <!-- Thời gian nhận/trả -->
          <table width="100%" cellspacing="0" cellpadding="0" style="margin-top:20px;">
            <tr>
              <td valign="top" style="border-left:3px solid #FCD00B;padding-left:8px;width:50%;">
                <p style="margin:0;font-size:14pt;">{{dropOff}}</p>
                <p style="font-weight:bold;margin:0;">{{order.checkIn.date}}</p>
                <p style="font-size:13px;color:#E28A1B;margin:0;">{{from}} {{order.checkIn.time}}</p>
              </td>
              <td valign="top" style="border-left:3px solid #FCD00B;padding-left:8px;width:50%;">
                <p style="margin:0;font-size:14pt;">{{pickUp}}</p>
                <p style="font-weight:bold;margin:0;">{{order.checkOut.date}}</p>
                <p style="font-size:13px;color:#E28A1B;margin:0;">{{to}} {{order.checkOut.time}}</p>
              </td>
            </tr>
          </table>

          <table width="100%" cellspacing="0" cellpadding="0" style="margin-top:20px;font-size:12pt;">
            <tr>
              <td valign="top" style="padding-left:3px;width:50%;">
                <p style="margin:4px 0;">{{lockerSize}}</p>
                <p style="margin:4px 0;">{{lockerNo}}</p>
                <p style="margin:4px 0;">{{maxStorageTime}}</p>
              </td>
              <td valign="top" style="padding-left:8px;width:50%;">
                <p style="margin:4px 0;"><strong>{{locker.box.boxSize}}</strong></p>
                <p style="margin:4px 0;"><strong>#{{locker.box.boxNo}}</strong></p>
                <p style="margin:4px 0;"><strong>{{order.maxDuration}} {{hour}}</strong></p>
              </td>
            </tr>
          </table>

        </div>

        <!-- Thông tin cơ sở -->
        <div style="margin:20px 0;">
          <h2 style="margin:0;text-transform:uppercase;"><strong>{{campusInfo}}</strong></h2>
          <p style="font-size: 12pt; margin:4px 0;">{{campusID}}: <strong>{{locker.lockerID}}</strong></p>
        </div>


        <hr style="border:none;border-top:1px solid #eee;margin:20px 0;">

        <div style="margin:20px 0;">
          <h2 style="margin:4px 0;"><strong>{{locker.locationName}}</strong></h2>
          <p style="font-size: 10pt;margin:4px 0 15px;color:#737374;">{{locker.locationAddress}}</p>
          <p style="font-size: 10pt;margin:4px 0;color:#737374;">{{phone}}: {{locker.locationPhone}}</p>
          <p style="font-size: 10pt;margin:4px 0;color:#737374;">{{locationWorkingTime}}:
            {{locker.locationWorkingTime.open}}
            -
            {{locker.locationWorkingTime.closed}}</p>

        </div>
  </table>

  <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center"
    style="background: white;max-width:500px;border-radius:10px 10px 0 0;box-shadow:0 1px 4px rgba(0,0,0,0.08);">
    <tr>
      <td style="padding:24px;">
        <h2 style="margin:0 0 5px;"> {{supportNote_0}}</h2>
        <p style="margin:0 0 15px;font-size:12px;">
          {{supportNote_1}} <strong>{{order.orderID}}</strong> {{supportNote_2}}
        </p>

        <table width="100%" cellspacing="0" cellpadding="0" style="margin-top:20px;font-size:14pt;">
          <tr>
            <td style="width: 50%;">
              <img
                src="https://d1gnmtcb0vp69g.cloudfront.net/imageResource/2023/10/18/1697613869675-93ceb77ecff437a05160504458f4c5b6.png"
                style="width:20px;height:20px;vertical-align:middle;margin-right:6px;">
              <a href="mailto:{{mailCS}}"
                style="color:#f1c232;font-weight:bold;text-decoration:none;vertical-align:middle;">{{contactUs}}</a>
            </td>
            <td>
              <img
                src="https://d1gnmtcb0vp69g.cloudfront.net/imageResource/2023/10/18/1697613876012-122ea15fea882d69d3184faa634cd6fd.png"
                style="width:20px;height:20px;vertical-align:middle;margin-right:6px;">
              <a href="#"
                style="color:#f1c232;font-weight:bold;text-decoration:none;vertical-align:middle;">{{helpCenter}}</a>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

  <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center"
    style="max-width:500px;margin:auto;background:#fcd00b;padding:10px;text-align:center; border-radius:0 0 10px 10px;">
    <tr>
      <td>
        <p style="font-size:12px;color:#8f8f8f;line-height:20px; text-align: center; padding-inline:20px">
          {{mailSignature_0}}<span style="text-transform: uppercase;"> {{customer.fullname}}</span>
          {{mailSignature_1}}</p>
        <p style="font-size:12px;color:#8f8f8f;line-height:20px; text-align: center;">
          {{mailSignature_2}}
        </p>
        </p>
      </td>
    </tr>

  </table>


</body>

</html>